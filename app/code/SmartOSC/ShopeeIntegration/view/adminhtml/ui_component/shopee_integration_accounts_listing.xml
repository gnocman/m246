<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">shopee_integration_accounts_listing.shopee_integration_accounts_listing_data_source</item>
            <item name="deps" xsi:type="string">shopee_integration_accounts_listing.shopee_integration_accounts_listing_data_source</item>
        </item>
        <item name="spinner" xsi:type="string">spinner_columns</item>
        <item name="buttons" xsi:type="array">
            <item name="add" xsi:type="array">
                <item name="name" xsi:type="string">add</item>
                <item name="label" xsi:type="string" translate="true">Add Account</item>
                <item name="class" xsi:type="string">primary</item>
                <item name="url" xsi:type="string">shopee_integration/newAccount/index</item>
            </item>
        </item>
    </argument>
    <dataSource name="nameOfDataSource">
        <argument name="dataProvider" xsi:type="configurableObject">
            <argument name="class" xsi:type="string">Magento\Framework\View\Element\UiComponent\DataProvider\DataProvider</argument>
            <argument name="name" xsi:type="string">shopee_integration_accounts_listing_data_source</argument>
            <argument name="primaryFieldName" xsi:type="string">account_id</argument>
            <argument name="requestFieldName" xsi:type="string">id</argument>
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="component" xsi:type="string">Magento_Ui/js/grid/provider</item>
                    <item name="update_url" xsi:type="url" path="mui/index/render"/>
                    <item name="storageConfig" xsi:type="array">
                        <item name="indexField" xsi:type="string">account_id</item>
                    </item>
                </item>
            </argument>
        </argument>
    </dataSource>
    <listingToolbar name="listing_top">
        <settings>
            <sticky>true</sticky>
        </settings>
        <bookmark name="bookmarks"/>
        <columnsControls name="columns_controls"/>
        <exportButton name="export_button"/>
        <filterSearch name="fulltext"/>
        <filters name="listing_filters"/>
        <massaction name="listing_massaction" component="Magento_Ui/js/grid/tree-massactions">
            <action name="delete">
                <settings>
                    <confirm>
                        <message translate="true">Are you sure you want to delete the selected accounts?</message>
                        <title translate="true">Delete accounts</title>
                    </confirm>
                    <url path="shopee_integration/accounts/massDelete"/>
                    <type>delete</type>
                    <label translate="true">Delete</label>
                </settings>
            </action>
        </massaction>
        <paging name="listing_paging"/>
    </listingToolbar>
    <columns name="spinner_columns">
        <selectionsColumn name="ids" sortOrder="10">
            <settings>
                <indexField>account_id</indexField>
            </settings>
        </selectionsColumn>
        <column name="account_id" sortOrder="20">
            <settings>
                <filter>textRange</filter>
                <label translate="true">ID</label>
                <sorting>asc</sorting>
            </settings>
        </column>
        <column name="account_name" sortOrder="30">
            <settings>
                <filter>text</filter>
                <label translate="true">Account Name</label>
            </settings>
        </column>
        <column name="base_url" sortOrder="40">
            <settings>
                <filter>text</filter>
                <label translate="true">Base Url</label>
            </settings>
        </column>
        <column name="access_token" sortOrder="50">
            <settings>
                <filter>text</filter>
                <label translate="true">Access Token</label>
            </settings>
        </column>
        <column name="account_status" sortOrder="60">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="filter" xsi:type="string">account_status</item>
                    <item name="editor" xsi:type="array">
                        <item name="editorType" xsi:type="string">account_status</item>
                        <item name="validation" xsi:type="array">
                            <item name="required-entry" xsi:type="boolean">true</item>
                        </item>
                    </item>
                    <item name="label" xsi:type="string" translate="true">Account Status</item>
                </item>
            </argument>
            <settings>
                <options class="SmartOSC\ShopeeIntegration\Model\Config\Source\Status"/>
                <bodyTmpl>SmartOSC_ShopeeIntegration/grid/cells/status.html</bodyTmpl>
            </settings>
        </column>
        <actionsColumn name="actions" class="SmartOSC\ShopeeIntegration\Ui\Component\Listing\Column\Actions">
            <settings>
                <label translate="true">Actions</label>
            </settings>
        </actionsColumn>
    </columns>
</listing>

<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">shopee_integration_newaccount_form.shopee_integration_accounts_listing_data_source</item>
            <item name="deps" xsi:type="string">shopee_integration_newaccount_form.shopee_integration_accounts_listing_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">Account Information</item>
        <item name="config" xsi:type="array">
            <item name="dataScope" xsi:type="string">data</item>
            <item name="namespace" xsi:type="string">shopee_integration_newaccount_form</item>
        </item>
        <item name="buttons" xsi:type="array">
            <item name="back" xsi:type="string">SmartOSC\ShopeeIntegration\Block\Adminhtml\Edit\Back</item>
            <item name="reset" xsi:type="string">Magento\Customer\Block\Adminhtml\Edit\ResetButton</item>
            <item name="save" xsi:type="string">SmartOSC\ShopeeIntegration\Block\Adminhtml\Edit\Save</item>
        </item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
    </argument>
    <dataSource name="shopee_integration_accounts_listing_data_source">
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
        <settings>
            <submitUrl path="shopee_integration/newaccount/save"/>
        </settings>
        <dataProvider class="SmartOSC\ShopeeIntegration\Model\DataProvider" name="shopee_integration_accounts_listing_data_source">
            <settings>
                <requestFieldName>id</requestFieldName>
                <primaryFieldName>account_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <fieldset name="shopee_integration_newaccount_detail">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="label" xsi:type="string" translate="true">Account Information</item>
                <item name="sortOrder" xsi:type="number">20</item>
            </item>
        </argument>
        <field name="account_code">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Account Code</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="source" xsi:type="string">account_code</item>
                    <item name="dataScope" xsi:type="string">account_code</item>
                    <item name="additionalInfo" xsi:type="string">
                        <![CDATA[For internal use. Must be unique with no spaces ]]>
                    </item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">true</item>
                    </item>
                </item>
            </argument>
        </field>
        <field name="shop_id">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">int</item>
                    <item name="label" xsi:type="string" translate="true">Shop id</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="source" xsi:type="string">shop_id</item>
                    <item name="dataScope" xsi:type="string">shop_id</item>
                    <item name="disabled" xsi:type="boolean">true</item>
                    <item name="additionalInfo" xsi:type="string">
                        <![CDATA[Shop id automatically filled when you authorized your shop. ]]>
                    </item>
                </item>
            </argument>
        </field>
        <field name="valid_invalid" formElement="select">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">int</item>
                    <item name="label" xsi:type="string" translate="true">Valid/Invalid</item>
                    <item name="formElement" xsi:type="string">select</item>
                    <item name="source" xsi:type="string">valid_invalid</item>
                    <item name="dataScope" xsi:type="string">valid_invalid</item>
                    <item name="disabled" xsi:type="boolean">true</item>
                    <item name="options" xsi:type="array">
                        <item name="enable" xsi:type="array">
                            <item name="value" xsi:type="number">1</item>
                            <item name="label" xsi:type="string" translate="true">Authorized</item>
                        </item>
                        <item name="disable" xsi:type="array">
                            <item name="value" xsi:type="number">0</item>
                            <item name="label" xsi:type="string" translate="true">Un Authorized</item>
                        </item>
                    </item>
                    <item name="default" xsi:type="number">0</item>
                </item>
            </argument>
        </field>
        <field name="account_status" formElement="select">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">int</item>
                    <item name="label" xsi:type="string" translate="true">Account Status</item>
                    <item name="formElement" xsi:type="string">select</item>
                    <item name="source" xsi:type="string">account_status</item>
                    <item name="dataScope" xsi:type="string">account_status</item>
                    <item name="options" xsi:type="array">
                        <item name="enable" xsi:type="array">
                            <item name="value" xsi:type="number">1</item>
                            <item name="label" xsi:type="string" translate="true">Enable</item>
                        </item>
                        <item name="disable" xsi:type="array">
                            <item name="value" xsi:type="number">0</item>
                            <item name="label" xsi:type="string" translate="true">Disable</item>
                        </item>
                    </item>
                    <item name="default" xsi:type="number">0</item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">true</item>
                    </item>
                </item>
            </argument>
        </field>
        <field name="magento_store">
            <argument name="data" xsi:type="array">
                <item name="options" xsi:type="object">Magento\Cms\Ui\Component\Listing\Column\Cms\Options</item>
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">int</item>
                    <item name="label" xsi:type="string" translate="true">Account Store</item>
                    <item name="formElement" xsi:type="string">select</item>
                    <item name="source" xsi:type="string">magento_store</item>
                    <item name="dataScope" xsi:type="string">magento_store</item>
                    <item name="default" xsi:type="string">0</item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">true</item>
                    </item>
                </item>
            </argument>
        </field>
    </fieldset>
</form>

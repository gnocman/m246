<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <css src="SmartOSC_GroupOrder::css/style.css"/>
    </head>
    <body>
        <referenceBlock name="minicart">
            <arguments>
                <argument name="jsLayout" xsi:type="array">
                    <item name="components" xsi:type="array">
                        <item name="minicart_content" xsi:type="array">
                            <item name="children" xsi:type="array">
                                <item name="extra_info" xsi:type="array">
                                    <item name="children" xsi:type="array">
                                        <item name="group_order" xsi:type="array">
                                            <item name="component" xsi:type="string">SmartOSC_GroupOrder/js/view/minicart</item>
                                            <item name="config" xsi:type="array">
                                                <item name="componentDisabled" xsi:type="helper" helper="SmartOSC\GroupOrder\Helper\Data::isDisabled"/>
                                            </item>
                                        </item>
                                        <!-- Add the new button -->
                                        <item name="group_order_redirect" xsi:type="array">
                                            <item name="component" xsi:type="string">SmartOSC_GroupOrder/js/view/redirect-button</item>
                                            <item name="config" xsi:type="array">
                                                <item name="componentDisabled" xsi:type="helper" helper="SmartOSC\GroupOrder\Helper\Data::isDisabled"/>
                                            </item>
                                        </item>
                                    </item>
                                </item>
                            </item>
                        </item>
                    </item>
                </argument>
            </arguments>
        </referenceBlock>
    </body>
</page>

<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="delivery_date" translate="label" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>SmartOSC Configuration Delivery Date</label>
            <tab>sales</tab>
            <resource>Magento_Sales::config_sales</resource>
            <group id="general" translate="label" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Delivery Settings</label>
                <field id="min_delivery_date" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Minimum Delivery Date</label>
                    <comment>Enter the minimum number of days for delivery</comment>
                    <validate>required-number validate-number</validate>
                </field>
                <field id="max_delivery_date" translate="label" type="text" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Maximum Delivery Date</label>
                    <comment>Enter the maximum number of days for delivery</comment>
                    <validate>required-number validate-number</validate>
                </field>
            </group>
        </section>
    </system>
</config>
